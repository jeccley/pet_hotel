<%= title @customer.name, "Customer" %>

<header>
  <h1><%= @customer.name %></h1>
  <ul class="actions">
    <li><%= link_to "Edit Customer", edit_customer_path(@customer), class: "edit" %></li>
    <li><%= link_to "Delete Customer", customer_path(@customer),
                    method: :delete,
                    data: { confirm: "Are you sure you want to delete this customer?" },
                    class: "delete" %></li>
  </ul>
</header>
<div class="details">
  <h4>Notes</h4>
  <p>
    <%= @customer.notes %>
  </p>
  <table>
    <tr>
      <th>Phone:</th>
      <td><%= @customer.phone %></td>
    </tr>
    <tr>
      <th>Email:</th>
      <td><%= mail_to @customer.email, @customer.email, subject: "Katie's Bunny Boarding: " %></td>
    </tr>
    <tr>
      <th>Vet Details:</th>
      <td><%= @customer.vet_details %></td>
    </tr>
  </table>
</div>
<header>
  <h3>Pets</h3>

  <ul class="actions">
    <li><%= link_to "New Pet", new_customer_pet_path(@customer), class: "new" %></li>
  </ul>
</header>

<ul class="pets">
  <% @customer.pets.each do |pet| %>
    <li>
      <%= link_to pet.name, [@customer, pet] %>
    </li>
  <% end %>
</ul>

<header>
  <h3>Bookings</h3>
  <ul class="actions">
    <li><%= link_to "New Booking", new_customer_booking_path(@customer), class: "new" %></li>
  </ul>
</header>

<ul class="bookings">
  <% @customer.bookings.each do |booking| %>
    <li>
      <%= link_to booking.drop_off, [@customer, booking] %> until <%= booking.pick_up %>
      <br><i><%= booking.notes  %></i>
    </li>
  <% end %>
</ul>

