<%= bootstrap_form_with(model: customer, local: true, label_errors: true) do |form| %>
  <%= form.text_field :name %>
  <%= form.telephone_field :phone %>
  <%= form.email_field :email %>
  <%= form.text_area :notes, placeholder: "Additional notes about the customer" %>
  <%= form.text_area :vet_details, placeholder: "Vet name and contact information" %>
  <%= form.primary %>
<% end %>