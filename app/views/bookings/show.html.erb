<%= title @booking.name, "Bookings" %>
<h1><%= @booking.name %></h1>
  <%= link_to "Edit Booking", edit_booking_path(@booking) %>
  <%= link_to "Delete Booking", booking_path(@booking),
              method: :delete,
              data: { confirm: "Are you sure you want to delete this booking?" } %>
  <p><%= @booking.drop_off %></p>
  <p><%= @booking.pick_up %></p>
  <header>
    <h2>Pets</h2>

    <ul class="actions">
      <li><%= link_to "New Pet", new_booking_pet_path(@booking) %></li>
    </ul>
</header>
<ul class="tickets">
  <% @booking.pets.each do |pet| %>
    <li>
      #<%= pet.id %> -
      <%= link_to pet.name, [@booking, pet] %>
    </li>
  <% end %>
</ul>