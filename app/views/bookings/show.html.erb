<%= title @booking.drop_off, "Bookings" %>
<h1><%= @customer.name %> - <%= @booking.drop_off %></h1>
<%= link_to "Edit Booking", edit_customer_booking_path(@customer, @booking) %>
<%= link_to "Delete Booking", customer_booking_path(@customer, @booking),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this booking?" } %>
<p><%= @booking.pick_up %></p>
<p><%= @booking.notes %></p>
