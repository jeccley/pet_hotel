<%= form_with(model: [customer, booking], local:true) do |form| %>
  <% if booking.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(booking.errors.count, "error") %>
      prohibited this booking from being saved:</h2>
      <ul>
        <% booking.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :drop_off %>
    <%= form.date_field :drop_off %>
  </div>

  <div>
    <%= form.label :pick_up %>
    <%= form.date_field :pick_up %>
  </div>

  <div>
    <%= form.label :notes %>
    <%= form.text_area :notes, placeholder: "Additional notes about the booking" %>
  </div>

  <%= form.submit %>
<% end %>