<%= bootstrap_form_with(model: [customer, pet], local: true, label_errors: true) do |form| %>
  <%= form.text_field :name %>
  <%= form.select :animal,
        {
          'Rabbits' => ['Large Rabbit', 'Rabbit', 'Dwarf Rabbit', 'House Rabbit'],
          'Small Pets' => ['Guinea Pig', 'Hamster', 'Gerbil', 'Mouse', 'Rat'],
          'Birds' => ['Budgie', 'Canary'],
          'Other' => ['Hedgehog', 'Tortoise']
        }, prompt: 'Pick one' %>
  <%= form.check_box :vaccinated %>
  <%= form.select :status, ["Active", "Inactive"] %>
  <%= form.text_area :notes, placeholder: "Additional notes about the pet" %>
  <%= form.primary %>
<% end %>
