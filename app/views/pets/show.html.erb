<div class="pet">
  <header>
    <h1><%= @customer.name %></h1>
    <h2><%= @pet.name %></h2>
  </header>
  <%= link_to "Edit Pet", edit_customer_pet_path(@customer, @pet) %>
  <%= link_to "Delete Pet", customer_pet_path(@customer, @pet),
              method: :delete,
              data: { confirm: "Are you sure you want to delete this pet?" } %>

  <ul class="list">
  <li>Type of animal: <%= @pet.animal %></li>
  <li>Vaccination status: <%= @pet.vaccinated.to_s.capitalize %></li>
  <li>Status: <%= @pet.status %></li>
  <li>Notes: <%= @pet.notes %></li>
</div>
